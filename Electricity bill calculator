#include<stdio.h>
int main()
{
    float unit;
    float Bill;
    float Servicecharge;
    float Amount;
    printf("Enter electricity consumed in unit:");
    scanf("%f",&unit);
    if(unit<=50)
    {
        Bill=unit*0.50;
        printf("The bill is:%f\n",Bill);
    }
    else if(unit<=150)
    {
        Bill=unit*0.75;
        printf("The bill is:%f\n",Bill);
    }
    else if(unit<=250)
    {
        Bill=unit*1.20;
        printf("The bill is:%f\n",Bill);
    }
    else if(unit>250)
    {
        Bill=unit*1.50;
        printf("The bill is:%f\n",Bill);
    }
    Servicecharge=0.2*Bill;
    Amount= Servicecharge+Bill;
    printf("The total amount payable(including charges) is:%f\n",Amount);
    
    return 0;
}
